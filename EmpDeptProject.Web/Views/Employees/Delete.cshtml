@model EmpDeptProject.Models.Models.Employee
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr/>
        </div>

        <div class="mb-3">
            <label asp-for="EmployeeName"></label>
            <input asp-for="EmployeeName" disabled class="form-control" />

            @* @Html.ValidationMessageFor(m=>m.Name,"Name cannot be more than 20 characters")*@

        </div>
         <div class="mb-3">
            <label asp-for="EmployeeSalary"></label> 
            <input asp-for="EmployeeSalary" disabled class="form-control"  />
         </div>
         <div class="mb-3">
            <label asp-for="DepartmentId"></label> 
            <input asp-for="DepartmentId" disabled class="form-control"  />
         </div>
         <button type="submit" class="btn btn-primary" style="width:130px">Delete</button>
         <a asp-controller="Employees" asp-action="Create" class="btn btn-primary">Back</a>

    </div>
</form>

