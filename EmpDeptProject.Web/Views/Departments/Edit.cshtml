@model EmpDeptProject.Models.Models.Department
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Department</h2>
            <hr/>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>

         <div class="mb-3">
            <label asp-for="DepartmentId"></label> 
            <input asp-for="DepartmentId"  disabled class="form-control"  />
         </div>
         <div class="mb-3">
            <label asp-for="DepartmentName"></label> 
            <input asp-for="DepartmentName" class="form-control"  />
            <div class="mb-3">
                    </div>
         <button type="submit" class="btn btn-primary" style="width:130px">SaveChanges</button>
         <a asp-controller="Departments" asp-action="Create" class="btn btn-primary">Back</a>

    </div>
</form>
