@model EmpDeptProject.Models.Models.Department
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Department</h2>
            <hr/>
        </div>


         <div class="mb-3">
            <label asp-for="DepartmentId"></label> 
            <input asp-for="DepartmentId" disabled class="form-control"  />
         </div>
         <div class="mb-3">
            <label asp-for="DepartmentName"></label> 
            <input asp-for="DepartmentName" disabled class="form-control"  />
         </div>
         <button type="submit" class="btn btn-primary" style="width:130px">Delete</button>
         <a asp-controller="Departments" asp-action="Create" class="btn btn-primary">Back</a>

    </div>
</form>

